<jumbotron>
<h1>Eat-da-Burger!</h1>
</jumbotron>>

<img src="../public/assets/images/149342.png">


<h2>Burgers Available</h2>

<ul>
  {{#each burgers}}
       {{#unless this.devoured}}
            <span>   
                <form action="/burgers/{{this.id}}?_method=PUT" method="POST">
                     <button type="submit" class='burgerAvailable'>Devour {{this.burger_name}} ?</button>
                </form>
            </span>
        {{/unless}}
  {{/each}}
</ul>

<h2>Devoured burgers</h2>

<ul>
  {{#each burgers}}
    {{#if devoured}}
     <div>
               {{this.burger_name}}
    </div>
    {{/if}}
  {{/each}}
</ul>

<h2>Add a Burger</h2>
<form class="create-form">

  <div class="form-group">
    <label for="ca">Burger Name:</label>
    <input type="text" id="burger" name="name">
  </div>

  <button type="submit">Add burger</button>
</form>
